      <h3>Bookers </h3>

       <div><% if user_signed_in? %>
      <div class="nav1">

         <%= link_to "logout",destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out btn btn-white" %></div>
       <div class="nav2">

         <%= link_to "Books", books_path, class:"glyphicon glyphicon-book btn btn-white" %></div>

