
 <div class="container">
        <div class="row">

  <div class="col-xs-3">
   <%= render 'users/tenpre', book: @book, user:current_user %>
  </div>

  <div class="col-xs-9">
     <h1>Books</h1>

    <table class="table table-striped">
     	<tr>
     		 <th>  </th><th>Title</th> <th>opinion</th>
     	</tr>


     <% @books.each do |book| %>
       <tr>
        <td>
        <%= link_to user_path(book.user_id) do %>
        <%= attachment_image_tag book.user, :profile_image,   class:"img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
        <% end %>
       </td>

       <td><%= link_to book.title,book_path(book) %></td>
       <td><%= book.body %></td>

       </tr>
  <% end %>

     </table>
    </div>
   </div>
 </div>





